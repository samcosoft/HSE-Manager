<MudDialog>
    <DialogContent>
        <MudField Label="تاریخ ثبت:" Underline="false">
            <SamcoDateSelector @bind-Date="@SelIncentive.IssueDate" DefaultCalendar="SamcoDateSelector.CalendarType.Persian" />
        </MudField>
        <MudTextField @bind-Value="@(SelIncentive.Reason)" Label="شرح تشویق:" Variant="Variant.Text" Adornment="Adornment.Start" 
                       Placeholder="الزامی"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Success" OnClick="SaveIncentive">ثبت</MudButton>
        <MudButton Color="Color.Error" OnClick="Cancel">انصراف</MudButton>
    </DialogActions>
</MudDialog>