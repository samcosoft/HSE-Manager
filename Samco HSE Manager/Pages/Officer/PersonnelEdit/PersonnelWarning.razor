<MudDialog>
    <DialogContent>
        <MudField Label="تاریخ ثبت:" DisableUnderLine="true">
            <SamcoDateSelector @bind-DateNotNull="@SelWarning.IssueDate" DefaultCalendar="SamcoDateSelector.CalendarType.Persian" />
        </MudField>
        <MudTextField @bind-Value="@(SelWarning.Reason)" Label="شرح اخطار:" Variant="Variant.Text" Adornment="Adornment.Start" 
                      Placeholder="الزامی"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Success" OnClick="SaveWarning">ثبت</MudButton>
        <MudButton Color="Color.Error" OnClick="Cancel">انصراف</MudButton>
    </DialogActions>
</MudDialog>