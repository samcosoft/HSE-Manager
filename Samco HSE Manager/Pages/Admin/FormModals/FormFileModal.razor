@inject IStringLocalizer<Resource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Recycling" Class="me-3 mb-1" />
            @L["FormFile_Title"]
        </MudText>
        <MudAlert Severity="Severity.Warning">@L["FormFile_Alert"]</MudAlert>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem lg="12">
                <FileUploader @ref="_uploader" AllowedExtension="FileUploader.AllowedFileExtensions.DocumentsOnly"
                              DataId="@SelFormId.ToString()" SavePath="SamcoSoftShared.UploadFolders.Forms"
                              DoNotCreateDirectory="true" AllowMultiple="false"/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["CancelButtonText"]</MudButton>
        <MudButton Color="Color.Success" Variant="Variant.Filled" StartIcon="fas fa-check" OnClick="Submit">@L["ConfirmButtonText"]</MudButton>
    </DialogActions>
</MudDialog>
