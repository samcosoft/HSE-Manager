@using Samco_HSE.HSEData
@inject ISnackbar Snackbar
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Work" Class="me-3 mb-1"/>
            اطلاعات پروژه
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid>
            <MudItem lg="12">
                <MudTextField Label="نام پروژه" Variant="Variant.Outlined" AutoFocus="true"
                              @bind-Value="@(SelProject.Name)"/>
            </MudItem>
            <MudItem lg="12">
                <SamcoDateSelector @bind-Date="SelProject.StartDate" DisplayText="تاریخ شروع (الزامی)" CalenderVariant="Variant.Outlined"/>
            </MudItem>
            <MudItem lg="12">
                <SamcoDateSelector @bind-Date="SelProject.EndDate" DisplayText="تاریخ پایان"/>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">انصراف</MudButton>
        <MudButton Color="Color.Success" IconClass="fas fa-check" OnClick="Submit">تأیید</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Project SelProject { get; set; } = null!;

    private void Submit()
    {
        if (SelProject.Name == null)
        {
            Snackbar.Add("نام پروژه الزامی است.", Severity.Error);
            return;
        }
        var prevProj = SelProject.Session.Query<Project>().FirstOrDefault(x => x.Name == SelProject.Name);
        if (prevProj != null && prevProj.Name == SelProject.Name && prevProj.Oid != SelProject.Oid)
        {
            Snackbar.Add("پروژه با همین نام وجود دارد.", Severity.Error);
            return;
        }
        if (SelProject.StartDate == null)
        {
            Snackbar.Add("وارد نمودن تاریخ شروع پروژه الزامی است.", Severity.Error);
            return;
        }
        if (SelProject.EndDate != null && SelProject.EndDate < SelProject.StartDate)
        {
            Snackbar.Add("تاریخ پایان پروژه باید از شروع آن بزرگتر باشد.", Severity.Error);
            return;
        }
        SelProject.Save();
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}