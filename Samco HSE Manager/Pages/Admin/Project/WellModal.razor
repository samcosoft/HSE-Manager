@using Samco_HSE.HSEData
@inject ISnackbar Snackbar
@inject IStringLocalizer<Resource> L

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="fas fa-oil-well" Class="me-3 mb-1" />
            @L["Projects_WellInfoTitle"]
        </MudText>
    </TitleContent>
    <DialogContent>
        <div class="d-flex flex-column gap-4">
            <MudTextField Label="@L["GridHeaderWellName"]" Variant="Variant.Outlined" AutoFocus="true" @bind-Value="@(SelWell.Name)" />
            <MudTextField Label="@L["GridHeaderWellLocation"]" Variant="Variant.Outlined" @bind-Value="@(SelWell.Location)" />
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@L["CancelButtonText"]</MudButton>
        <MudButton Color="Color.Success" IconClass="fas fa-check" OnClick="Submit">@L["ConfirmButtonText"]</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public Well SelWell { get; set; } = null!;

    [Parameter]
    public Well SelProject { get; set; } = null!;

    private void Submit()
    {
        if (SelWell.Name == null)
        {
            Snackbar.Add(L["WellModal_RequiredWell"], Severity.Error);
            return;
        }
        var prevWell = SelWell.ProjectName.Wells.FirstOrDefault(x => x.Name == SelWell.Name);
        if (prevWell != null && prevWell.Name == SelWell.Name && prevWell.Oid != SelWell.Oid)
        {
            Snackbar.Add(L["WellModal_DuplicateWellName"], Severity.Error);
            return;
        }
        SelWell.Save();
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() => MudDialog.Cancel();
}